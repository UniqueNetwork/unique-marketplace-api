{
  "name": "unique-marketplace-api",
  "version": "1.0.0",
  "description": "Backend project for unique marketplace",
  "author": "Unique Network",
  "private": true,
  "license": "Apache 2.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "dev": "nest start --watch",
    "debug": "nest start --debug --watch",
    "prod": "node dist/main",
    "coverage": "jest --config tests/jest.config.json --coverage --detectOpenHandles",
    "test": "jest --config tests/jest.config.json --detectOpenHandles",
    "test:watch": "jest --config tests/jest.config.json --watch --detectOpenHandles",
    "escrow:kusama": "node dist/cli.js start_escrow kusama",
    "escrow:unique": "node dist/cli.js start_escrow unique",
    "playground": "npx nestjs-command playground",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm --config src/database/connection-options.ts",
    "migration:generate": "npm run typeorm -- migration:generate -n",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:show": "npm run typeorm -- migration:show",
    "migration:revert": "npm run typeorm -- migration:revert",
    "schema:log": "npm run typeorm -- schema:log"
  },
  "dependencies": {
    "@nestjs/cli": "^8.2.0",
    "@nestjs/common": "8.2.4",
    "@nestjs/core": "8.2.4",
    "@nestjs/platform-express": "8.2.4",
    "@nestjs/platform-socket.io": "^8.2.6",
    "@nestjs/schedule": "^1.0.2",
    "@nestjs/serve-static": "^2.2.2",
    "@nestjs/swagger": "5.1.5",
    "@nestjs/typeorm": "8.0.2",
    "@nestjs/websockets": "^8.2.6",
    "@polkadot/api": "6.12.1",
    "@polkadot/dev": "^0.65.45",
    "@polkadot/keyring": "^8.3.3",
    "@polkadot/networks": "^8.3.3",
    "@polkadot/types": "^7.5.1",
    "@polkadot/util": "^8.3.3",
    "@polkadot/util-crypto": "^8.3.3",
    "@socket.io/postgres-adapter": "^0.2.0",
    "@unique-nft/types": "0.2.0",
    "@unique-nft/ui-kit": "0.0.3-rc1",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "ethereum-input-data-decoder": "0.3.5",
    "nestjs-command": "3.1.0",
    "pg": "8.7.1",
    "protobufjs": "6.11.2",
    "protobufs": "^0.1.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.4.0",
    "swagger-ui-express": "4.3.0",
    "typeorm": "0.2.41",
    "uuid": "8.3.2",
    "web3": "1.6.1",
    "yargs": "17.3.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^8.0.0",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "jest": "^27.0.6",
    "prettier": "^2.5.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}
